/**
 * 16-bit incrementer:
 * out = in + 1 (arithmetic addition)
 */

CHIP Inc16 {
    IN in[16];
    OUT out[16];

    PARTS:
    Xor(a=in[0],b=in[0],out=zero);
    Not(in=zero,out=one);

    Add16(a=in,b[0]=one,out=out);
}